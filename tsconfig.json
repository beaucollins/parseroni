{
    "compilerOptions": {
        "target": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}